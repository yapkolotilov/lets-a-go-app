<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32dp"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/base_details_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/illnesses_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/symptoms_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <Button
        android:id="@+id/edit_details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рекомендации" />

    <GridLayout
        android:id="@+id/filter_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2" />

    <Button
        android:id="@+id/edit_filter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_button" />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>