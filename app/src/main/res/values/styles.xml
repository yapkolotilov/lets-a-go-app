<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LetsHint">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetsTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="LetsButton">
        <item name="cornerRadius">160dp</item>
        <item name="android:paddingTop">@dimen/padding_button</item>
        <item name="android:paddingBottom">@dimen/padding_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="LetsTextButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:paddingTop">@dimen/padding_button</item>
        <item name="android:paddingBottom">@dimen/padding_button</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>

    <style name="LetsTextHint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="LetsText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>