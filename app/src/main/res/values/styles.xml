<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LetsHint">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetsTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="LetsButton">
        <item name="cornerRadius">160dp</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="LetsTextButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>

    <style name="LetsTextButtonRed" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="LetsTextHint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetsText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetsTextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LetsFilterSwitch">
        <item name="switchMinWidth">72dp</item>
        <item name="android:thumb">@drawable/filter_thumb</item>
    </style>

    <style name="LetsBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/LetsBottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="LetsBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
</resources>